class Solution {
    public boolean checkSubarraySum(int[] nums, int k) {
        int maxLen = 0, sum = 0;
        HashMap<Integer,Integer> map = new HashMap<>();
        for(int i = 0;i < nums.length;i++) {
            sum += nums[i];
            if(sum % k == 0) {
                maxLen = i + 1;
            }
            int rem = sum % k;
            if(map.containsKey(rem)) {
                maxLen = Math.max(maxLen,i - map.get(rem));
            }else{
                map.put(rem,i);
            }
        }
        if(maxLen > 1) {return true;}
        return false;
    }
}
