class Solution {
    public static int getCount(int num,int flag) {
        int count = 0;
        while(num % 3 != 0) {
            if(flag == 1) {
                num += 1;
                count++;
            }else{
                num -= 1;
                count++;
            }
        }
        return count;
    }
    public int minimumOperations(int[] nums) {
        int next = 1, prev = 0,count = 0;
        for(int num : nums) {
            if(num % 3 == 0) {continue;}
            int nxt = getCount(num,1);
            int before = getCount(num,0);
            int min = Math.min(nxt,before);
            count += min;
        }
        return count;
    }
}
