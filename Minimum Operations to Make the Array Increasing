class Solution {
    public int minOperations(int[] nums) {
        int operation = 0;
        for(int i = 1;i < nums.length;i++) {
            if(nums[i] > nums[i - 1]) {
                continue;
            }else{
                int diff = Math.abs(nums[i] - nums[i - 1]);
                int newValue = nums[i] + diff + 1;
                operation += diff + 1;
                nums[i] = newValue;
            }
        }
        return operation;
    }
}
