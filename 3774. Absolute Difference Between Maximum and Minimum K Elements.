class Solution {
    public int absDifference(int[] nums, int k) {
        Arrays.sort(nums);
        int max = 0,min = 0,left = 0,right = nums.length - 1,j = k;
        while(j != 0) {
            max += nums[right--];
            min += nums[left++];
            j--;
        }
        return Math.abs(max - min);
    }
}
